<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ljb.dao.BookMapper">
    <select id="findList" parameterType="Map" resultType="com.ljb.pojo.Book">
  		select * from books where BookName like #{name} limit #{offset},#{pageSize}
  	</select>
    <select id="findAll" resultType="com.ljb.pojo.Book">
  		select * from books
  	</select>
    <select id="getTotal" parameterType="Map" resultType="Integer">
  		select count(id) from books where BookName like #{name}
  	</select>
